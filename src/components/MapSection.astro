          if (map && typeof map.flyTo === 'function') {
            map.flyTo({
              center: accommodation.coordinates,
              zoom: 16,
              duration: 2500,
              essential: true
            });
          }
        }, isMobile ? 600 : 800);
      } else {
        if (map && typeof map.flyTo === 'function') {
          map.flyTo({
            center: accommodation.coordinates,
            zoom: 16,
            duration: 2000
          });
        }
      }
      
      // Show popup
      setTimeout(function() {
        for (let i = 0; i < markers.length; i++) {
          const marker = markers[i];
          if (marker && typeof marker.getLngLat === 'function') {
            const lngLat = marker.getLngLat();
            if (Math.abs(lngLat.lng - accommodation.coordinates[0]) < 0.001 && 
                Math.abs(lngLat.lat - accommodation.coordinates[1]) < 0.001) {
              const popup = marker.getPopup();
              if (popup && typeof popup.addTo === 'function') {
                popup.addTo(map);
              }
              break;
            }
          }
        }
      }, autoFocus ? (isMobile ? 2500 : 3000) : 2000);
    }
  }

