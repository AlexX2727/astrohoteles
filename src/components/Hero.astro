// src/components/Hero.astro
---

<section class="hero" id="inicio">
    <div class="hero-content">
      <h1>Experiencias Inolvidables</h1>
      <p class="subtitle">Descubre los hoteles m√°s exclusivos del mundo</p>
    </div>
    <div class="scroll-indicator">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M7 10L12 15L17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </section>
  
  <style>
    .hero {
      height: 100vh;
      background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), 
                  url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80') center/cover;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      position: relative;
    }
  
    .hero-content h1 {
      font-size: 4rem;
      margin-bottom: 1rem;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    }
  
    .hero-content .subtitle {
      font-size: 1.5rem;
      color: #0EA5E9;
      margin-bottom: 2rem;
    }
  
    .scroll-indicator {
      position: absolute;
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%);
      color: #0EA5E9;
      animation: bounce 2s infinite;
    }
  
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
      40% { transform: translateX(-50%) translateY(-10px); }
      60% { transform: translateX(-50%) translateY(-5px); }
    }
  
    @media (max-width: 768px) {
      .hero-content h1 {
        font-size: 2.5rem;
      }
      
      .hero-content .subtitle {
        font-size: 1.2rem;
      }
    }
  </style>