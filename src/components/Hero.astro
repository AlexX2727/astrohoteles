  <style>
    .hero {
      height: 100vh;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      overflow: hidden;
    }
  
    .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      opacity: 0.7;
    }
  
    .hero-bg-1 {
      background: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80') center/cover;
      grid-column: 1;
      grid-row: 1;
    }
  
    .hero-bg-2 {
      background: url('https://images.unsplash.com/photo-1544551763-46a013bb70d5?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80') center/cover;
      grid-column: 2;
      grid-row: 1;
    }
  
    .hero-bg-3 {
      background: url('https://images.unsplash.com/photo-1559827260-dc66d52bef19?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80') center/cover;
      grid-column: 1;
      grid-row: 2;
    }
  
    .hero-bg-4 {
      background: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80') center/cover;
      grid-column: 2;
      grid-row: 2;
    }
  
    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(14, 165, 233, 0.4), rgba(255, 107, 53, 0.3), rgba(0,0,0,0.6));
      z-index: 1;
    }
  
    .hero-content {
      position: relative;
      z-index: 2;
      max-width: 1200px;
      padding: 0 2rem;
    }
  
    .hero-content h1 {
      font-size: clamp(2.8rem, 8vw, 5.5rem);
      margin-bottom: 1.5rem;
      color: #fff;
      text-shadow: 3px 3px 10px rgba(0,0,0,0.9);
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: -1px;
      text-transform: uppercase;
    }
  
    .hero-content .subtitle {
      font-size: clamp(1.3rem, 4vw, 2.2rem);
      color: #0EA5E9;
      margin-bottom: 3rem;
      font-weight: 500;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.8);
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
      line-height: 1.3;
    }
  
    .hero-highlights {
      position: relative;
      z-index: 2;
      display: flex;
      justify-content: center;
      gap: 3rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
  
    .highlight-item {
      text-align: center;
      color: #fff;
      background: rgba(0,0,0,0.3);
      padding: 1rem;
      border-radius: 12px;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255,255,255,0.1);
      transition: transform 0.3s ease;
    }
  
    .highlight-item:hover {
      transform: translateY(-5px);
      background: rgba(14, 165, 233, 0.2);
    }
  
    .highlight-icon {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      display: block;
    }
  
    .highlight-text {
      font-size: 0.9rem;
      font-weight: 500;
      text-shadow: 0 1px 3px rgba(0,0,0,0.8);
    }
  
    .scroll-indicator {
      position: absolute;
      bottom: 3rem;
      left: 50%;
      transform: translateX(-50%);
      color: #0EA5E9;
      animation: bounce 2s infinite;
      cursor: pointer;
      z-index: 2;
      transition: all 0.3s ease;
      background: rgba(0,0,0,0.5);
      padding: 1rem;
      border-radius: 50%;
      backdrop-filter: blur(10px);
    }
  
    .scroll-indicator:hover {
      color: #fff;
      background: rgba(14, 165, 233, 0.6);
      transform: translateX(-50%) scale(1.1);
    }
  
    .scroll-indicator svg {
      width: 3.5rem;
      height: 3.5rem;
      filter: drop-shadow(0 2px 8px rgba(0,0,0,0.6));
    }
  
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { 
        transform: translateX(-50%) translateY(0); 
      }
      40% { 
        transform: translateX(-50%) translateY(-15px); 
      }
      60% { 
        transform: translateX(-50%) translateY(-8px); 
      }
    }
  
    /* Responsive adjustments */
    @media (max-width: 768px) {
      .hero-background {
        grid-template-columns: 1fr;
        grid-template-rows: repeat(4, 1fr);
      }
  
      .hero-bg-1 { grid-column: 1; grid-row: 1; }
      .hero-bg-2 { grid-column: 1; grid-row: 2; }
      .hero-bg-3 { grid-column: 1; grid-row: 3; }
      .hero-bg-4 { grid-column: 1; grid-row: 4; }
  
      .hero-content {
        padding: 0 1.5rem;
      }
  
      .hero-highlights {
        gap: 2rem;
        margin-top: 1.5rem;
      }
  
      .highlight-item {
        padding: 0.8rem;
      }
  
      .highlight-icon {
        font-size: 2rem;
      }
  
      .highlight-text {
        font-size: 0.8rem;
      }
  
      .scroll-indicator {
        bottom: 2rem;
        padding: 0.8rem;
      }
  
      .scroll-indicator svg {
        width: 3rem;
        height: 3rem;
      }
    }
  
    @media (max-width: 480px) {
      .hero-content {
        padding: 0 1rem;
      }
  
      .hero-content h1 {
        margin-bottom: 1rem;
      }
  
      .hero-content .subtitle {
        margin-bottom: 2rem;
      }
  
      .hero-highlights {
        gap: 1.5rem;
        margin-top: 1rem;
      }
  
      .highlight-item {
        flex: 1;
        min-width: 120px;
        padding: 0.6rem;
      }
  
      .highlight-icon {
        font-size: 1.8rem;
      }
  
      .highlight-text {
        font-size: 0.7rem;
      }
  
      .scroll-indicator {
        padding: 0.6rem;
      }
  
      .scroll-indicator svg {
        width: 2.5rem;
        height: 2.5rem;
      }
    }
  
    @media (max-width: 320px) {
      .hero-content {
        padding: 0 0.5rem;
      }
  
      .hero-highlights {
        gap: 1rem;
      }
  
      .highlight-item {
        padding: 0.5rem;
      }
  
      .highlight-text {
        font-size: 0.65rem;
      }
  
      .scroll-indicator {
        padding: 0.5rem;
      }
  
      .scroll-indicator svg {
        width: 2rem;
        height: 2rem;
      }
    }
  </style>