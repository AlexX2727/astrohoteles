<style>
.hero {
  height: 100vh;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  background-color: #000;
}

/* Fondo de playa tropical apropiado */
.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.main-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('/images/hero/main.jpg');
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

/* Collage de im√°genes flotantes */
.image-collage {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.floating-img {
  position: absolute;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255,255,255,0.1);
  opacity: 0.7;
  transition: all 0.6s ease;
}

.floating-img:hover {
  transform: scale(1.05) rotate(2deg);
  opacity: 1;
  z-index: 10;
  box-shadow: 0 30px 60px rgba(14, 165, 233, 0.5);
}

.floating-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.floating-img:hover img {
  transform: scale(1.1);
}

.img-label {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.9));
  color: white;
  padding: 1rem;
  font-size: 0.9rem;
  font-weight: 600;
  text-shadow: 0 2px 4px rgba(0,0,0,0.8);
}

/* Posiciones de las im√°genes - corregidas para evitar solapamiento */
.img-1 {
  width: 280px;
  height: 180px;
  top: 8%;
  left: 5%;
  animation: float-1 8s ease-in-out infinite;
  z-index: 4;
}

.img-2 {
  width: 260px;
  height: 170px;
  top: 12%;
  right: 5%;
  animation: float-2 7s ease-in-out infinite;
  z-index: 5;
}

.img-3 {
  width: 240px;
  height: 150px;
  bottom: 35%;
  left: 3%;
  animation: float-3 9s ease-in-out infinite;
  z-index: 6;
}

.img-4 {
  width: 220px;
  height: 160px;
  bottom: 25%;
  right: 3%;
  animation: float-4 6s ease-in-out infinite;
  z-index: 7;
}

@keyframes float-1 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(1deg); }
}

@keyframes float-2 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(15px) rotate(-1deg); }
}

@keyframes float-3 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-15px) rotate(1deg); }
}

@keyframes float-4 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(10px) rotate(-1deg); }
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0,0,0,0.6), rgba(14, 165, 233, 0.3), rgba(255, 107, 53, 0.2), rgba(0,0,0,0.7));
  z-index: 2;
}

/* Contenido principal */
.hero-content {
  position: relative;
  z-index: 3;
  max-width: 1000px;
  padding: 0 2rem;
  width: 100%;
}

/* Badge superior */
.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(14, 165, 233, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(14, 165, 233, 0.3);
  padding: 0.8rem 1.5rem;
  border-radius: 50px;
  color: #0EA5E9;
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  box-shadow: 0 8px 25px rgba(14, 165, 233, 0.2);
}

.badge-icon {
  font-size: 1.2rem;
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
}

/* T√≠tulo ARREGLADO - Bienvenido visible */
.hero-title {
  margin-bottom: 2rem;
  line-height: 1.2;
}

.title-small {
  display: block;
  font-size: clamp(1.8rem, 4vw, 2.5rem);
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 1rem;
  text-shadow: 0 4px 8px rgba(0,0,0,0.9);
  letter-spacing: 1px;
}

.title-main {
  display: block;
  font-size: clamp(4rem, 10vw, 7rem);
  font-weight: 900;
  background: linear-gradient(135deg, 
    #0EA5E9 0%,     /* Azul oc√©ano */
    #22D3EE 25%,    /* Azul caribe */
    #FFFFFF 50%,    /* Blanco espuma */
    #0EA5E9 75%,    /* Azul profundo */
    #0284C7 100%    /* Azul marino */
  );
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 5px 10px rgba(0,0,0,0.8);
  letter-spacing: -2px;
  text-transform: uppercase;
  filter: drop-shadow(0 4px 8px rgba(14, 165, 233, 0.6));
}

/* Subt√≠tulo m√°s peque√±o */
.hero-subtitle {
  font-size: clamp(1rem, 2.5vw, 1.2rem);
  color: #ffffff;
  margin-bottom: 1.5rem;
  font-weight: 400;
  line-height: 1.5;
  text-shadow: 0 4px 8px rgba(0,0,0,0.9);
  max-width: 650px;
  margin-left: auto;
  margin-right: auto;
}

/* Highlights en una sola fila m√°s arriba */
.hero-highlights {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 1rem;
  flex-wrap: wrap;
}

.highlight-item {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255,255,255,0.2);
  border-radius: 12px;
  padding: 0.8rem 1rem;
  text-align: left;
  transition: all 0.3s ease;
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
  min-width: 180px;
  max-width: 200px;
}

.highlight-item:hover {
  transform: translateY(-5px);
  background: rgba(14, 165, 233, 0.3);
  border-color: rgba(14, 165, 233, 0.5);
  box-shadow: 0 15px 35px rgba(14, 165, 233, 0.4);
}

.highlight-icon {
  font-size: 1.5rem;
  flex-shrink: 0;
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
}

.highlight-text h3 {
  color: #fff;
  font-size: 0.9rem;
  font-weight: 700;
  margin: 0 0 0.2rem 0;
  text-shadow: 0 3px 6px rgba(0,0,0,0.9);
}

.highlight-text p {
  color: #e2e8f0;
  font-size: 0.75rem;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0,0,0,0.9);
}

/* Solo la flecha - posici√≥n m√°s baja */
.scroll-indicator {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  color: #0EA5E9;
  animation: bounce 2s infinite;
  cursor: pointer;
  z-index: 3;
  transition: all 0.3s ease;
  background: rgba(0,0,0,0.6);
  padding: 1rem;
  border-radius: 50%;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(14, 165, 233, 0.3);
}

.scroll-indicator:hover {
  color: #fff;
  background: rgba(14, 165, 233, 0.6);
  transform: translateX(-50%) scale(1.1);
}

.scroll-indicator svg {
  width: 3.5rem;
  height: 3.5rem;
  filter: drop-shadow(0 3px 6px rgba(0,0,0,0.8));
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { 
    transform: translateX(-50%) translateY(0); 
  }
  40% { 
    transform: translateX(-50%) translateY(-15px); 
  }
  60% { 
    transform: translateX(-50%) translateY(-8px); 
  }
}

/* Responsive Design */
@media (max-width: 1024px) {
  /* iOS Safari: evitar parpadeos con fixed */
  .main-bg { 
    background-attachment: scroll; 
  }
  .floating-img {
    opacity: 0.5;
  }
  
  .hero-highlights {
    gap: 0.8rem;
  }
  
  .highlight-item {
    min-width: 160px;
    padding: 0.6rem 0.8rem;
  }
}

@media (max-width: 768px) {
  /* Mostrar las 4 im√°genes como grid 2x2 en m√≥vil */
  .image-collage {
    position: absolute;
    inset: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    padding: 20px;
    z-index: 1;
    opacity: 0.7;
  }
  .floating-img {
    position: relative;
    width: 100%;
    height: 120px;
    animation: none;
    border-radius: 12px;
  }
  .img-1, .img-2, .img-3, .img-4 {
    top: auto; bottom: auto; left: auto; right: auto;
    width: 100%; height: 120px;
  }
  .img-label { font-size: 0.8rem; padding: 0.5rem; }

  .hero-content {
    padding: 0 1.2rem;
  }

  .hero-highlights {
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
  }

  .highlight-item {
    width: 100%;
    max-width: 360px;
    min-width: auto;
    padding: 0.7rem 0.9rem;
  }

  .hero-badge {
    padding: 0.6rem 1.2rem;
    font-size: 0.8rem;
  }

  .scroll-indicator {
    bottom: 1rem;
    padding: 0.8rem;
  }

  .scroll-indicator svg {
    width: 3rem;
    height: 3rem;
  }
  
  /* Mejorar experiencia en m√≥vil */
  .hero {
    min-height: 100vh;
  }
}

@media (max-width: 480px) {
  .hero-content {
    padding: 0 1rem;
  }

  .highlight-item {
    flex-direction: column;
    text-align: center;
    padding: 0.8rem;
  }

  .highlight-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .hero-subtitle {
    margin-bottom: 2rem;
  }

  .scroll-indicator {
    bottom: 0.8rem;
    padding: 0.6rem;
  }

  .scroll-indicator svg {
    width: 2.5rem;
    height: 2.5rem;
  }
}
</style>

<script is:inline>
function scrollToMap() {
  const mapSection = document.querySelector('#mapa');
  if (mapSection) {
    const header = document.querySelector('.header');
    const headerHeight = header ? header.offsetHeight : 70;
    const elementY = mapSection.getBoundingClientRect().top + window.pageYOffset;
    const offsetY = Math.max(elementY - headerHeight, 0);
    window.scrollTo({ top: offsetY, behavior: 'smooth' });
  }
}

document.addEventListener('DOMContentLoaded', function() {
  window.scrollToMap = scrollToMap;
});
</script>