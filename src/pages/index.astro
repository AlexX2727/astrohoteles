                    <a href="/hotel-details.html?id=paradise-resort" class="reserve-btn">Reservar Ahora</a>
                </div>
            </div>

            <!-- Hotel 2 -->
            <div class="hotel-card">
                <img src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" alt="Mountain Lodge" class="hotel-image">
                <div class="hotel-overlay">
                    <h3 class="hotel-name">Mountain Lodge</h3>
