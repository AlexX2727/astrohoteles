---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
  <meta http-equiv="Pragma" content="no-cache" />
  <meta http-equiv="Expires" content="0" />
  <title>{title}</title>
  
</head>

<body>
  <!-- Header -->
  <header class="header">
    <nav class="nav">
      <div class="logo">
        <span class="main-text">HOSPEDAJE</span>
        <span class="sub-text">SALINAS</span>
      </div>
      <ul class="nav-links" id="nav-links">
        <li><a href="#inicio">Inicio</a></li>
        <li><a href="#mapa">Mapa</a></li>
        <li><a href="#contacto">Contacto</a></li>
      </ul>
      <div class="hamburger" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </nav>
  </header>
  <div class="nav-overlay" id="nav-overlay"></div>

  <main>
    <slot />
  </main>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: #000;
    color: #fff;
    font-family: 'Arial', sans-serif;
    overflow-x: hidden;
  }

  /* Evitar scroll cuando el menú está abierto */
  body.menu-open {
    overflow: hidden;
  }

  /* Overlay para el menú móvil */
  .nav-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 900;
  }
  .nav-overlay.active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Header */
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    z-index: 1000;
    padding: 1rem 2rem;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    font-size: 1.8rem;
    font-weight: bold;
    color: #0EA5E9;
    display: flex;
    flex-direction: column;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 1.5px;
  }

  .logo .main-text {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #0EA5E9, #06B6D4);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .logo .sub-text {
    font-size: 1.1rem;
    color: #fff;
    font-weight: 600;
    margin-top: -3px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.4);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: #0EA5E9;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background: #fff;
    margin: 3px 0;
    transition: 0.3s;
    border-radius: 2px;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(-45deg) translate(-5px, 6px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(45deg) translate(-5px, -6px);
  }

  @media (max-width: 768px) {
    /* Header fijo también en móvil para que siempre sea visible */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.95);
      z-index: 1100;
    }

    /* Compensar el header fijo en el flujo */
    main { padding-top: 64px; }
    
    .hamburger {
      display: flex;
    }
    
    /* Drawer fijo que ocupa alto completo */
    .nav-links {
      position: fixed;
      top: 0;
      right: -80%;
      width: 80%;
      height: 100vh;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      flex-direction: column;
      padding: 2rem 1.5rem;
      gap: 1.5rem;
      transition: right 0.3s ease;
      border-left: 1px solid #333;
      z-index: 1200;
      overflow-y: auto;
    }
    
    .nav-links.active {
      right: 0;
    }
    
    .nav-links li {
      border-bottom: 1px solid #333;
      padding-bottom: 1rem;
    }
    
    .nav-links a {
      font-size: 1.1rem;
      font-weight: 500;
    }
    
    .logo .main-text {
      font-size: 1.3rem;
    }
    
    .logo .sub-text {
      font-size: 0.9rem;
    }
    
    .nav {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: 0.8rem 1rem;
    }
    
    .logo .main-text {
      font-size: 1.1rem;
    }
    
    .logo .sub-text {
      font-size: 0.8rem;
    }
    
    .nav-links {
      width: 80%;
      padding: 1.5rem;
    }
    
    .hamburger span {
      width: 20px;
      height: 2px;
    }
  }
</style>

<script>
  // Smooth scrolling con compensación del header fijo en todas las vistas
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        const header = document.querySelector('.header');
        const headerHeight = header ? header.offsetHeight : 70;
        const elementY = target.getBoundingClientRect().top + window.pageYOffset;
        const offsetY = Math.max(elementY - headerHeight, 0);

        window.scrollTo({ top: offsetY, behavior: 'smooth' });
        
        // Cerrar menú móvil después del click
        const navLinks = document.getElementById('nav-links');
        const hamburger = document.getElementById('hamburger');
        const overlay = document.getElementById('nav-overlay');
        if (navLinks && hamburger) {
          navLinks.classList.remove('active');
          hamburger.classList.remove('active');
        }
        if (overlay) overlay.classList.remove('active');
        document.body.classList.remove('menu-open');
      }
    });
  });

  // Header background on scroll
  window.addEventListener('scroll', () => {
    const header = document.querySelector('.header');
    if (window.scrollY > 100) {
      header.style.background = 'rgba(0, 0, 0, 0.95)';
    } else {
      header.style.background = 'rgba(0, 0, 0, 0.9)';
    }
  });

  // Mobile hamburger menu con overlay y bloqueo de scroll
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.getElementById('hamburger');
    const navLinks = document.getElementById('nav-links');
    const overlay = document.getElementById('nav-overlay');

    function openMenu() {
      navLinks.classList.add('active');
      hamburger.classList.add('active');
      if (overlay) overlay.classList.add('active');
      document.body.classList.add('menu-open');
    }

    function closeMenu() {
      navLinks.classList.remove('active');
      hamburger.classList.remove('active');
      if (overlay) overlay.classList.remove('active');
      document.body.classList.remove('menu-open');
    }

    if (hamburger && navLinks) {
      hamburger.addEventListener('click', function() {
        const isOpen = navLinks.classList.contains('active');
        if (isOpen) closeMenu(); else openMenu();
      });

      if (overlay) {
        overlay.addEventListener('click', closeMenu);
      }

      // Cerrar con Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeMenu();
      });
    }
  });
</script>