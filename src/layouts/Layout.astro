<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: #000;
    color: #fff;
    font-family: 'Arial', sans-serif;
    overflow-x: hidden;
  }

  /* Evitar scroll cuando el men√∫ est√° abierto */
  body.menu-open {
    overflow: hidden;
  }

  /* Overlay para el men√∫ m√≥vil */
  .nav-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 900;
  }
  .nav-overlay.active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Contact modal */
  .contact-modal-overlay {
    position: fixed;
    inset: 0;
    /* Fondo transparente para no oscurecer toda la p√°gina */
    background: transparent;
    display: flex;
    align-items: end;
    justify-content: end;
    padding: 16px;
    z-index: 2000;
    pointer-events: none; /* solo el panel recibe clicks */
  }
  .contact-modal-overlay[hidden] { display: none !important; }

  .contact-modal-dialog {
    position: relative;
    width: min(92vw, 420px);
    background: #0b0b0c;
    border: 1px solid #2a2a2a;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0,0,0,0.55);
    pointer-events: auto;
    animation: slideUp .25s ease-out;
  }
  @keyframes slideUp { from { transform: translateY(12px); opacity: .8; } to { transform: translateY(0); opacity: 1; } }
.contact-header {
    background: radial-gradient(120% 120% at 0% 0%, rgba(14,165,233,0.25), transparent),
                linear-gradient(135deg, rgba(14,165,233,0.25), rgba(255,107,53,0.15));
    padding: 14px 16px;
    border-bottom: 1px solid #2a2a2a;
  }
  .contact-header h3 { margin: 0 0 4px 0; color: #fff; }
  .contact-header p { margin: 0; color: #b3c0ca; font-size: 0.9rem; }

.contact-body { padding: 10px 10px; display: grid; gap: 8px; }
  .contact-item {
    display: flex; gap: 12px; align-items: center; text-decoration: none;
    background: #121212; border: 1px solid #2a2a2a; border-radius: 10px;
    padding: 12px 14px; color: #e5e7eb; transition: border-color .2s, transform .2s;
  }
  .contact-item:hover { border-color: #0EA5E9; transform: translateY(-2px); }
  .contact-icon { font-size: 1.3rem; filter: drop-shadow(0 2px 4px rgba(0,0,0,.4)); }

.contact-close {
    position: absolute; top: 10px; right: 10px;
    width: 32px; height: 32px; border-radius: 50%;
    border: 1px solid #2a2a2a; background: rgba(0,0,0,0.6); color: #fff;
    cursor: pointer;
  }

  /* Header */
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    z-index: 1000;
    padding: 1rem 2rem;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    font-size: 1.8rem;
    font-weight: bold;
    color: #0EA5E9;
    display: flex;
    flex-direction: column;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 1.5px;
  }

  .logo .main-text {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #0EA5E9, #06B6D4);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .logo .sub-text {
    font-size: 1.1rem;
    color: #fff;
    font-weight: 600;
    margin-top: -3px;
    text-shadow: 0 2px 4px rgba(0,0,0,0.4);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: #0EA5E9;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background: #fff;
    margin: 3px 0;
    transition: 0.3s;
    border-radius: 2px;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(-45deg) translate(-5px, 6px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(45deg) translate(-5px, -6px);
  }

  @media (max-width: 768px) {
    /* Header fijo tambi√©n en m√≥vil para que siempre sea visible */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.95);
      z-index: 1100;
    }

    /* Compensar el header fijo en el flujo */
    main { padding-top: 64px; }
    
    .hamburger {
      display: flex;
    }
    
    /* Drawer fijo que ocupa alto completo */
    .nav-links {
      position: fixed;
      top: 0;
      right: -80%;
      width: 80%;
      height: 100vh;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      flex-direction: column;
      padding: 2rem 1.5rem;
      gap: 1.5rem;
      transition: right 0.3s ease;
      border-left: 1px solid #333;
      z-index: 1200;
      overflow-y: auto;
    }
    
    .nav-links.active {
      right: 0;
    }
    
    .nav-links li {
      border-bottom: 1px solid #333;
      padding-bottom: 1rem;
    }
    
    .nav-links a {
      font-size: 1.1rem;
      font-weight: 500;
    }
    
    .logo .main-text {
      font-size: 1.3rem;
    }
    
    .logo .sub-text {
      font-size: 0.9rem;
    }
    
    .nav {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: 0.8rem 1rem;
    }
    
    .logo .main-text {
      font-size: 1.1rem;
    }
    
    .logo .sub-text {
      font-size: 0.8rem;
    }
    
    .nav-links {
      width: 80%;
      padding: 1.5rem;
    }
    
    .hamburger span {
      width: 20px;
      height: 2px;
    }
  }
</style>

<script>
  // Smooth scrolling con compensaci√≥n + apertura de modal de contacto
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      const href = this.getAttribute('href');

      // Abrir modal de contacto si corresponde
      if (href === '#contacto') {
        e.preventDefault();
        openContactModal();
        return;
      }

      e.preventDefault();
      const target = document.querySelector(href);
      if (target) {
        const header = document.querySelector('.header');
        const headerHeight = header ? header.offsetHeight : 70;
        const elementY = target.getBoundingClientRect().top + window.pageYOffset;
        const offsetY = Math.max(elementY - headerHeight, 0);
        window.scrollTo({ top: offsetY, behavior: 'smooth' });
        
        // Cerrar men√∫ m√≥vil despu√©s del click
        const navLinks = document.getElementById('nav-links');
        const hamburger = document.getElementById('hamburger');
        const overlay = document.getElementById('nav-overlay');
        if (navLinks && hamburger) {
          navLinks.classList.remove('active');
          hamburger.classList.remove('active');
        }
        if (overlay) overlay.classList.remove('active');
        document.body.classList.remove('menu-open');
      }
    });
  });

  // Header background on scroll
  window.addEventListener('scroll', () => {
    const header = document.querySelector('.header');
    if (window.scrollY > 100) {
      header.style.background = 'rgba(0, 0, 0, 0.95)';
    } else {
      header.style.background = 'rgba(0, 0, 0, 0.9)';
    }
  });

  // Mobile hamburger menu + Contact modal
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.getElementById('hamburger');
    const navLinks = document.getElementById('nav-links');
    const overlay = document.getElementById('nav-overlay');

    function openMenu() {
      navLinks.classList.add('active');
      hamburger.classList.add('active');
      if (overlay) overlay.classList.add('active');
      document.body.classList.add('menu-open');
    }

    function closeMenu() {
      navLinks.classList.remove('active');
      hamburger.classList.remove('active');
      if (overlay) overlay.classList.remove('active');
      document.body.classList.remove('menu-open');
    }

    if (hamburger && navLinks) {
      hamburger.addEventListener('click', function() {
        const isOpen = navLinks.classList.contains('active');
        if (isOpen) closeMenu(); else openMenu();
      });

      if (overlay) {
        overlay.addEventListener('click', closeMenu);
      }

      // Cerrar con Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeMenu();
      });
    }

    // Contact modal handlers
    const contactModal = document.getElementById('contact-modal');
    const contactClose = document.getElementById('contact-close');

    window.openContactModal = function() {
      if (!contactModal) return;
      contactModal.hidden = false;
      // No bloqueamos scroll global; el panel vive en la esquina
    }
    window.closeContactModal = function() {
      if (!contactModal) return;
      contactModal.hidden = true;
    }

    if (contactClose) {
      contactClose.addEventListener('click', window.closeContactModal);
    }
    if (contactModal) {
      contactModal.addEventListener('click', function(e){
        if (e.target === contactModal) window.closeContactModal();
      });
    }
    document.addEventListener('keydown', function(e){
      if (e.key === 'Escape') window.closeContactModal();
    });
  });
</script>